<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mImagem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ponte" />

        <TextView
            android:id="@+id/mTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:justificationMode="inter_word"
            android:text="Ponto no Túnel Santo Papa João Paulo II na região do Anhangabaú será desativado nos dias 21 e 22"
            android:textColor="#fff"
            android:background="@color/black"
            android:textSize="19sp"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/sptrans"
            android:layout_below="@+id/mTitulo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="85dp"
            android:id="@+id/mLogo"/>




    </RelativeLayout>

</LinearLayout>